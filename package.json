{
	"name": "lore-tracker",
	"private": true,
	"version": "1.4.0",
	"description": "Lore Tracker allows you to easily save, manage and visualise story elements for Table-top RPGs.",
	"homepage": "https://github.com/const39/lore-tracker",
	"license": "GPL-3.0-or-later",
	"repository": {
		"url": "https://github.com/const39/lore-tracker"
	},
	"type": "module",
	"scripts": {
		"generate-save-schema": "node generate-save-schema.js",
		"dev": "vite",
		"build": "vue-tsc && vite build",
		"type-check": "vue-tsc --noEmit",
		"preview": "vite preview",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"format": "prettier --write ./src",
		"style": "npm run format & npm run lint"
	},
	"dependencies": {
		"@vueuse/core": "^10.3.0",
		"ajv": "^6.12.6",
		"idb": "^7.1.1",
		"klona": "^2.0.6",
		"nanoid": "^4.0.2",
		"pinia": "^2.1.6",
		"pinia-orm": "^1.6.7",
		"pinia-plugin-persistedstate": "^3.2.0",
		"vue": "^3.3.4",
		"vue-markdown-render": "^2.0.1",
		"vue-router": "^4.2.4",
		"vuedraggable": "^4.1.0",
		"vuetify": "^3.3.11"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.3.2",
		"@types/markdown-it": "^12.2.3",
		"@types/node": "^18.17.1",
		"@types/object-hash": "^3.0.2",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-typescript": "^11.0.3",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-vue": "^9.16.1",
		"prettier": "^2.8.8",
		"ts-json-schema-generator": "^1.2.0",
		"typescript": "^4.9.5",
		"vite": "^4.3.5",
		"vite-plugin-vuetify": "^1.0.2",
		"vue-tsc": "^1.8.8"
	}
}
