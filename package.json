{
	"name": "lore-tracker",
	"private": true,
	"version": "1.2.0",
	"description": "Lore Tracker allows you to easily save, manage and visualise story elements for Table-top RPGs.",
	"homepage": "https://github.com/const39/lore-tracker",
	"license": "GPL-3.0-or-later",
	"repository": {
		"url": "https://github.com/const39/lore-tracker"
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc && vite build",
		"type-check": "vue-tsc --noEmit",
		"preview": "vite preview",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"format": "prettier --write ./src",
		"style": "npm run format & npm run lint"
	},
	"dependencies": {
		"@vueuse/core": "^9.13.0",
		"ajv": "^6.12.6",
		"klona": "^2.0.6",
		"mitt": "^3.0.0",
		"pinia": "^2.0.32",
		"vue": "^3.2.45",
		"vue-markdown-render": "^2.0.1",
		"vue-router": "^4.1.6",
		"vuedraggable": "^4.1.0",
		"vuetify": "^3.1.7"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@types/markdown-it": "^12.2.3",
		"@types/node": "^18.14.6",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-vue": "^9.11.0",
		"prettier": "^2.8.7",
		"ts-json-schema-generator": "^1.2.0",
		"typescript": "^4.9.3",
		"vite": "^4.1.0",
		"vite-plugin-vuetify": "^1.0.2",
		"vue-tsc": "^1.0.24"
	}
}
